        print("Thanks for playing, see you next time!")
        run = False
    if exit_request == "y":
        print("Thanks for playing, see you next time!")
        run = False
    if exit_request == "yes":
        print("Thanks for playing, see you next time!")
        run = False
    if exit_request == 'No':
        run = True
    if exit_request == 'NO':
        run = True
    if exit_request == 'N':
        run = True
    if exit_request == 'no':
        run = True
    if exit_request == 'n':
        run = True
        
